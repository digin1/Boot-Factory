@model Boot_Factory.ViewModel.MultipleData

@{
    ViewData["Title"] = "Add Item";
}

<h1>Add Item</h1>

<h4>Enter the Item details below</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input required asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductImage" class="control-label"></label>
                <input required asp-for="ProductImage" class="form-control" />
                <span asp-validation-for="ProductImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label"></label>
                <input required asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductGender" class="control-label"></label>
                <select required asp-for="ProductGender" class="form-control">

                    <option value="">Please select one</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Unisex">Unisex</option>
                </select>

                <span asp-validation-for="ProductGender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductSeason" class="control-label"></label>
                <select required asp-for="ProductSeason" class="form-control">

                    <option value="">Please select one</option>
                    @foreach (Categories category in Model.Categories)
                    {
                        <option value="@category.Category">@category.Category</option>
                    }
                </select>
                <span asp-validation-for="ProductSeason" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input required asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

