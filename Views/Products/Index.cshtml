@model IEnumerable<Boot_Factory.Models.Products>


@{
    ViewData["Title"] = "Admin Home";
}

<div class="container-fluid">

    <h4 class="alert alert-dark">Product Management Portal</h4>

    <p>
        <a class="btn btn-success" asp-action="Create">Add a new Product</a>
    </p>
    <table class="table table-striped table-bordered">
        <thead class="bg-info">
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Thumbnail
                </th>
                <th>
                    Image
                </th>
                <th>
                    Item Gender
                </th>
                <th>
                    Season
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.ProductName)</a>
                    </td>
                    <td width="50">
                        <img src="/images/ItemImages/@Html.DisplayFor(modelItem => item.ProductImage)" class="img-thumbnail" alt="">

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductImage)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductGender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductSeason)
                    </td>
                    <td>
                        £@Html.DisplayFor(modelItem => item.ProductPrice)
                    </td>
                    <td>
                        <a class="btn btn-warning mr-1" asp-action="Edit" asp-route-id="@item.Id">Update</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>