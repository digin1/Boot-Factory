@model Boot_Factory.Models.Products

@{
    ViewData["Title"] = "Delete";
}

<div class="container">

    <h4 class="alert alert-dark">Are you sure you want to delete this item <b>@Html.DisplayFor(model => model.ProductName)?</b></h4>
    <div>


        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Yes" class="btn btn-danger" /> <a asp-action="Index" class="btn btn-success">No</a>
        </form>
    </div>
</div>
